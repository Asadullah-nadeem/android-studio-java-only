<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        style="@style/customBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bottomsheet_bg">

        <ImageView
            android:id="@+id/mainscore"
            android:layout_width="110dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tvLiveMatch"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_title_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainscore"
            android:layout_marginTop="@dimen/_dim20">

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/maincard"
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                app:neumorph_shapeType="flat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLiveMatch">

                        <soup.neumorphism.NeumorphCardView
                            android:id="@+id/backButton_wStudentProfile_CardVie"
                            style="@style/CustomShapeAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:neumorph_shapeType="flat">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <RelativeLayout
                                    android:id="@+id/rel_"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="50dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ivTeam1Image"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:src="@drawable/ic_india" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tvTeam1Name"
                                                style="@style/customText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="4dp"
                                                android:layout_marginTop="4dp"
                                                android:layout_marginEnd="4dp"
                                                android:ems="2"
                                                android:maxLength="3"
                                                android:text="IND*"
                                                android:textSize="20dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="50dp"
                                        android:layout_marginRight="10dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ivTeam2Image"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:src="@drawable/ic_india" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tvTeam2Name"
                                                style="@style/customText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="4dp"
                                                android:layout_marginTop="4dp"
                                                android:layout_marginEnd="4dp"
                                                android:ems="2"
                                                android:maxLength="3"
                                                android:text="IND*"
                                                android:textSize="20dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="VS"
                                        android:textColor="@color/color_text_secondary" />

                                    <TextView
                                        android:id="@+id/tvMatchTitle"
                                        style="@style/customText"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="7dp"
                                        android:fontFamily="@font/nexa_light"
                                        android:maxLines="1"
                                        android:minLines="1"
                                        android:text="2nd  T20 Match"
                                        android:textAlignment="center"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tvdataTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvMatchTitle"
                                        android:fontFamily="@font/nexa_light"
                                        android:text="16 March 2021  07:00 PM"
                                        android:textAlignment="center"
                                        android:textColor="@color/color_text_orange"
                                        android:textSize="10dp" />

                                    <TextView
                                        android:id="@+id/statusIV"
                                        style="@style/customText"
                                        android:layout_width="54dp"
                                        android:layout_height="14dp"
                                        android:layout_marginStart="7dp"
                                        android:layout_marginTop="7dp"
                                        android:background="@drawable/ic_upcoming_icon"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:paddingLeft="4dp"
                                        android:paddingRight="4dp"
                                        android:text="Upcoming"
                                        android:textSize="7.5dp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </soup.neumorphism.NeumorphCardView>
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/customBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner">

                        <RelativeLayout
                            android:id="@+id/overview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <RelativeLayout
                                style="@style/customBackground"
                                android:layout_width="330dp"
                                android:layout_height="105dp"
                                android:layout_below="@+id/tvStart"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="35dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="35dp"
                                android:background="@drawable/bg_scoreupdate">

                                <TextView
                                    android:id="@+id/timer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/nexa_black_webfont"
                                    android:padding="15dp"
                                    android:text="07:40:02"
                                    android:textAlignment="center"
                                    android:textColor="@color/color_text_orange"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvStart"
                                style="@style/customText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Starting Soon"
                                android:textAlignment="center" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/overview"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="30dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/ic_white_rounded" />

                            <TextView
                                style="@style/customText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="4dp"
                                android:text="---------" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>
        </RelativeLayout>

        <TextView
            style="@style/customText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/nexa_heavy"
            android:text="@string/swipe_up_to_see_more"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvLiveMatch"
            style="@style/customText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottie_animation_view_S"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nexa_bold_webfont"
            android:text="Live Score"
            android:textSize="16dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animation_view_S"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ic_swipe_up.json"
            app:lottie_loop="true" />
    </RelativeLayout>
</RelativeLayout>
