<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adsvisible"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/ivTheme"
                style="@style/CustomShapeAppearance"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:onClick="changeTheme"

                android:scaleType="centerInside"
                android:src="@drawable/ic_sunny_day"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLogo"
                style="@style/customTitle"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="6dp" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/ivNotification"
                style="@style/CustomShapeAppearance"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_notifications_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:overScrollMode="never"
            app:layout_anchorGravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/liveLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/customText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nexa_bold_webfont"
                        android:text="Live Matches"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/ic_title_line" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <include layout="@layout/semer_item" />

                            <include layout="@layout/semer_item" />

                            <include layout="@layout/semer_item" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/topside_pager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/progress"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="progress.json"
                    app:lottie_loop="true" />

                <LinearLayout
                    android:id="@+id/SliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topside_pager"
                    android:gravity="center"
                    android:orientation="horizontal" />
                <RelativeLayout
                    android:id="@+id/ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="300dp">

                    <FrameLayout
                        android:id="@+id/native_ad_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:gravity="center"

                        android:orientation="vertical" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/adsgone"

                        android:gravity="center"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <TextView
                    style="@style/customText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nexa_bold_webfont"
                    android:text="Recent Matches"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/ic_title_line" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbarSize="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnALL"
                            style="@style/CustomShapeAppearance"
                            android:layout_width="122dp"
                            android:layout_height="60dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:fontFamily="@font/nexa_heavy"
                            android:gravity="center"
                            android:text="ALL"
                            app:neumorph_shapeType="pressed"
                            android:textSize="10sp" />

                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnLive"
                            style="@style/CustomShapeAppearance"
                            android:layout_width="122dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_heavy"
                            android:text="LIVE"
                            app:neumorph_shapeType="pressed"
                            android:textSize="10dp" />

                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnUpcoming"
                            style="@style/CustomShapeAppearance"
                            android:layout_width="122dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_heavy"
                            android:text="UPCOMING"
                            app:neumorph_shapeType="pressed"
                            android:textSize="10dp" />

                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnFinished"
                            style="@style/CustomShapeAppearance"
                            android:layout_width="122dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_heavy"
                            android:text="FINISHED"
                            app:neumorph_shapeType="pressed"
                            android:textSize="10dp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/semer_item" />

                        <include layout="@layout/semer_item" />

                        <include layout="@layout/semer_item" />
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAllMatchList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_dim100">

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_dim16"
                android:paddingRight="@dimen/_dim16"
                android:paddingBottom="@dimen/_dim16">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoMatches"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_matches" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Matches"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoNews"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_news" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="News"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <soup.neumorphism.NeumorphImageButton
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoHome"
                        android:padding="@dimen/_dim24"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_home"
                        app:neumorph_shadowColorDark="@color/color_red"
                        app:neumorph_shadowColorLight="@color/color_red"
                       app:neumorph_shapeType="pressed" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoRanks"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_rank" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Rank"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoSettings"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Settings"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/adsvisible"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#dfdfdf">

        <RelativeLayout
            android:id="@+id/adMobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ads Loading"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
