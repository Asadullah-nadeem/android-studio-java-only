<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adsvisible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/customText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nexa_black_webfont"
                android:text="ICC Men&apos;s Rankings"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/ballbyball"
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                android:clickable="true"
                app:neumorph_shapeType="flat">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/improfile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_men" />

                    <ImageView
                        style="@style/customForeground"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/title"
                        android:src="@drawable/ic_down_arrow" />

                    <TextView
                        android:id="@+id/title"
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nexa_black_webfont"
                        android:padding="15dp"
                        android:text=" Men&apos;s "
                        android:textSize="16sp" />
                </RelativeLayout>
            </soup.neumorphism.NeumorphCardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tabLs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottoBar"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/color_grey"
                    app:tabTextColor="@color/color_grey" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bottoBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_dim100"
                android:layout_alignParentBottom="true">

                <soup.neumorphism.NeumorphCardView
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_dim16"
                    android:paddingRight="@dimen/_dim16"
                    android:paddingBottom="@dimen/_dim16">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoMatches"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_matches" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Matches"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoNews"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_news" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="News"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoHome"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_home" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Home"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <soup.neumorphism.NeumorphImageButton
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_dim24"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_rank"
                            app:neumorph_shadowColorDark="@color/color_red"
                            app:neumorph_shadowColorLight="@color/color_red"
                            app:neumorph_shadowElevation="2dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ranks"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoSettings"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_settings" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Settings"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/adsvisible"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#dfdfdf">

        <RelativeLayout
            android:id="@+id/adMobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ads Loading"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
