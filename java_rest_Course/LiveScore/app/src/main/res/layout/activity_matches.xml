<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adsvisible"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_black"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnDateWise"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/nexa_heavy"
                    android:text="DATE WISE"
                    android:textSize="10dp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnSeriesWise"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/nexa_heavy"
                    android:text="SERIES WISE"
                    android:textSize="10dp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnTeamWise"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/nexa_heavy"
                    android:text="TAEM WISE"
                    android:textSize="10dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/semer_item" />

                <include layout="@layout/semer_item" />

                <include layout="@layout/semer_item" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/nsview"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_dim100">

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_dim16"
                android:paddingRight="@dimen/_dim16"
                android:paddingBottom="@dimen/_dim16">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <soup.neumorphism.NeumorphImageButton
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_dim24"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_matches"
                        app:neumorph_shadowColorDark="@color/color_red"
                        app:neumorph_shadowColorLight="@color/color_red"
                        app:neumorph_shadowElevation="2dp" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matches"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoNews"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_news" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="News"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoHome"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_home" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Home"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoRanks"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_rank" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Rank"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoSettings"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Settings"
                        android:textSize="@dimen/_dim10" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/adsvisible"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#dfdfdf">

        <RelativeLayout
            android:id="@+id/adMobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ads Loading"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
