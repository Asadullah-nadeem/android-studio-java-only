<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_dim10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/customText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nexa_bold_webfont"
            android:padding="10dp"
            android:text="Setting"
            android:textSize="18dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvTheme"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/themeicon"
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/baseline_light_mode_black_24dp"
                            android:padding="10dp" />

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@+id/themeicon"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="Change Theme"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvNotification"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/Notificationicon"
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/ic_notifications_icon"
                            android:padding="10dp" />

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@+id/Notificationicon"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="Notification Setting"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_bold_webfont"
                    android:padding="10dp"
                    android:text="Support"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvRateUs"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlRateUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/RateUsicon"
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/ic_star_black"
                            android:padding="10dp" />

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@+id/RateUsicon"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="Rate Us"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvInvite"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlInvite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/Invite"
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/ic_invite_black"
                            android:padding="10dp" />

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@+id/Invite"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="Invite friends"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_bold_webfont"
                    android:padding="10dp"
                    android:text="About"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvAbout"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="About Us"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvTerms"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="Terms and Conditions"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/cvPrivacy"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:neumorph_shapeType="flat">

                    <RelativeLayout
                        android:id="@+id/rlPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            style="@style/customForeground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ic_right_arrow"
                            android:padding="10dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/nexa_bold_webfont"
                            android:padding="10dp"
                            android:text="Privacy Policy"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_dim100">

        <soup.neumorphism.NeumorphCardView
            style="@style/CustomShapeAppearance"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_dim16"
            android:paddingRight="@dimen/_dim16"
            android:paddingBottom="@dimen/_dim16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical|center_horizontal|center"
                android:orientation="vertical">

                <ImageView
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gotoMatches"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_matches" />

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Matches"
                    android:textSize="@dimen/_dim10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical|center_horizontal|center"
                android:orientation="vertical">

                <ImageView
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gotoNews"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_news" />

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="News"
                    android:textSize="@dimen/_dim10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical|center_horizontal|center"
                android:orientation="vertical">

                <ImageView
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gotoHome"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home" />

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Home"
                    android:textSize="@dimen/_dim10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical|center_horizontal|center"
                android:orientation="vertical">

                <ImageView
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gotoRanks"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_rank" />

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Rank"
                    android:textSize="@dimen/_dim10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:orientation="vertical">

                <soup.neumorphism.NeumorphImageButton
                    style="@style/CustomShapeAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_dim24"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_settings"
                    app:neumorph_shadowColorDark="@color/color_red"
                    app:neumorph_shadowColorLight="@color/color_red"
                    app:neumorph_shadowElevation="2dp" />

                <TextView
                    style="@style/customText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Settings"
                    android:textSize="@dimen/_dim10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
