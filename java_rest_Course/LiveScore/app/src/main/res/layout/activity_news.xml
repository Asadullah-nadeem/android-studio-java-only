<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adsvisible">

        <TextView
            android:id="@+id/title"
            style="@style/customText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexa_bold_webfont"
            android:padding="5dp"
            android:text="Cricket News"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="12dp"
            android:visibility="gone">

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/news"
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:editable="false"
                        android:fontFamily="@font/nexa_bold_webfont"
                        android:hint="search here"
                        android:padding="5dp"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/CustomShapeAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_baseline_search_24" />
                </RelativeLayout>
            </soup.neumorphism.NeumorphCardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/news_not_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvSorry"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_sad_emoji" />

            <TextView
                android:id="@+id/tvSorry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nexa_bold_webfont"
                android:text="@string/sorry"
                android:textAlignment="center"
                android:textColor="@color/color_text_secondary"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSorry"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nexa_regular_webfont"
                android:text="no_latest_news_here"
                android:textAlignment="center"
                android:textColor="@color/color_text_secondary"
                android:textSize="16dp" />
        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_news"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="progress.json"
            app:lottie_loop="true" />

        <RelativeLayout
            android:id="@+id/rl_most"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_search"
            android:visibility="gone">

            <TextView
                android:id="@+id/mostrecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="15dp"
                android:text="Most Recent"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mostrecentrv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mostrecent"
                android:layout_margin="10dp"
                android:orientation="horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_topStoreis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_most"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_dim10">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/newssimmer_layout" />

                            <include layout="@layout/verticalsimmer_layout" />

                            <include layout="@layout/verticalsimmer_layout" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingStart="15dp"
                            android:paddingBottom="15dp"
                            android:text="Most Recent"
                            android:textSize="22sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/topstoryRecycler2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/bottoBar"
                            android:layout_below="@+id/TopStories"
                            android:layout_marginBottom="0dp"
                            android:divider="@android:color/transparent"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/TopStories"
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="15dp"
                            android:text="Top Stories"
                            android:textSize="22sp" />

                        <ListView
                            android:id="@+id/topstory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/TopStories"
                            android:divider="@android:color/transparent"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/topstoryRecycler1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:divider="@android:color/transparent"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:id="@+id/bottoBar"
                style="@style/customBackground"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_dim100"
                android:layout_alignParentBottom="true">

                <soup.neumorphism.NeumorphCardView
                    style="@style/CustomShapeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_dim16"
                    android:paddingRight="@dimen/_dim16"
                    android:paddingBottom="@dimen/_dim16">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoMatches"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_matches" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Matches"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <soup.neumorphism.NeumorphImageButton
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoNews"
                            android:padding="@dimen/_dim24"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_news"
                            app:neumorph_shadowColorDark="@color/color_red"
                            app:neumorph_shadowColorLight="@color/color_red"
                            app:neumorph_shadowElevation="2dp" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="News"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoHome"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_home" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Home"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoRanks"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_rank" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Rank"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/CustomShapeAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="gotoSettings"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_settings" />

                        <TextView
                            style="@style/customText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Settings"
                            android:textSize="@dimen/_dim10" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/adsvisible"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#dfdfdf">

        <RelativeLayout
            android:id="@+id/adMobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ads Loading"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
