<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CustomShapeAppearance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <soup.neumorphism.NeumorphCardView
            style="@style/CustomShapeAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shadowColorDark="@color/color_grey"
            app:neumorph_shadowColorLight="@color/color_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingTop="@dimen/_dim24"
                android:paddingRight="32dp"
                android:paddingBottom="@dimen/_dim24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/_dim10"
                        android:paddingRight="@dimen/_dim10"
                        android:text="England tour of india"
                        android:textSize="@dimen/_dim18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTeam1Name"
                        style="@style/customText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:paddingLeft="@dimen/_dim10"
                        android:paddingRight="@dimen/_dim10"
                        android:text="India"
                        android:textSize="@dimen/_dim16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/collapse"
                    style="@style/customForeground"
                    android:layout_width="@dimen/_dim24"
                    android:layout_height="@dimen/_dim24"
                    android:layout_gravity="center"
                    android:rotation="0"
                    android:src="@drawable/ic_down_arrow" />
            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_serieswise_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="gone" />
    </LinearLayout>
</soup.neumorphism.NeumorphCardView>
