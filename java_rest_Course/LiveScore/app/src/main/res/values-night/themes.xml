<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiveScore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="customBackground">
        <item name="android:background">@color/color_white_back</item>
        <item name="android:backgroundTint">@color/color_white_back</item>
        <item name="background">@color/color_white_back</item>
        <item name="backgroundTint">@color/color_white_back</item>
    </style>
    <style name="customForeground">
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="customText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="customTitle">
        <item name="srcCompat">@drawable/title_dark</item>
    </style>
    <style name="CustomShapeAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">@color/black</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_backgroundColor">@color/color_white_back</item>
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">32dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_inset">10dp</item>
        <item name="neumorph_shadowColorDark">@color/color_white_dark_shadow</item>
        <item name="neumorph_shadowColorLight">@color/color_white_light_shadow</item>
        <item name="neumorph_shadowElevation">4dp</item>
        <item name="neumorph_shapeType">pressed</item>
    </style>
    <style name="MyDialogTheme" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_black</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryDark_trans</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBarHome" parent="@style/AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.LiveLine11" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

</resources>